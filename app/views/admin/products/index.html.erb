<h1>Product List</h1>

<br><br>

<div class="pull-right">
  <%= link_to("Add new product", new_admin_product_path, :class => "btn btn-default") %>
</div>

<br><br>

<table class="table table-boldered">
  <thead>
   <tr>
    <td>产品</td>
    <td>描述</td>
    <td>数量</td>
    <td>价格</td>
    <td>管理员选项</td>
    <td>创建日期</td>
   </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td><%= link_to(product.title, admin_product_path(product)) %></td>
      <td><%= product.description %></td>
      <td><%= product.quantity %></td>
      <td><%= product.price %></td>
      <td>
        <%= link_to("Edit", edit_admin_product_path(product)) %>
        |
        <%= link_to("Delete", admin_product_path(product), :method => :delete, :data => { :confirm => " Are you sure ?"}) %>
      </td>
      <td><%= product.created_at %></td>
    </tr>
    <% end %>
  </tbody>

</table>
