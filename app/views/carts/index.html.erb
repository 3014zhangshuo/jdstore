

 <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">

<div class="container">
<div class="row">
  <div class="col-md-12">
    <h2>  </h2>
    <div class="total clearfix">
       <button type="button" class="btn btn-default btn-lg btn3d pull-right">
         <span class="glyphicon glyphicon-thumbs-up">
           哇！才<%= render_cart_total_price(current_cart) %>RMB
             <%= link_to("XD", checkout_carts_path, method: :post , class: "btn-default") %>
         </span>
       </button>

     </div>
    <br><br>
    <div class="table-title">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th class="text-center">商品</th>
          <th class="text-center">单价</th>
          <th class="text-center">数量</th>
          <th class="text-center">控制选项</th>
        </tr>
      </thead>
      <tbody>
        <% current_cart.cart_items.each do |cart_item| %>
        <tr>
          <td>
           <%= link_to product_path(cart_item.product) do %>
           <% if cart_item.product.photos[0].present? %>
              <%= image_tag(cart_item.product.photos[0].avatar.thumb.url, class: "thumbnail") %>
            <% else %>
              <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
            <% end %>
           <% end %>
          </td>
          <td class="text-center">
            <%= cart_item.product.price %>
          </td>
          <td>
            <% cart_item = current_cart.cart_items.find_by(product_id: cart_item.product_id) %>
                <%= simple_form_for cart_item,url: cart_item_path(cart_item.product_id) do |f|%>
                <%= f.input :quantity %>
                <%= f.submit "更改" ,data:{ disable_with:"Submitting..."},class:"btn  btn-black" %>
                <% end %>
          </td>
          <td class="text-center">
            <%= link_to("Delete", cart_item_path(cart_item), method: :delete, class: "btn btn-default" ,data: { confirm: "滚啦？" }) %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
      <br>

       <div class="pull-right">
          <%= link_to("点即炸",carts_path, method: :delete, class: "btn btn-default",data: { confirm: "你确定放弃这次机会？？" } ) %>
       </div>
    </div>
  </div>
  </div>
  </div>


  <div class="container">
      <div class="row">
      <div class="col-sm-4 col-md-4">
              <div class="panel panel-default">
                  <div class="panel-body">
                      <form accept-charset="UTF-8" action="" method="POST">
                          <textarea class="form-control counted" name="message" placeholder="Type in your message" rows="5" style="margin-bottom:10px;"></textarea>
                          <h6 class="pull-right" id="counter">320 characters remaining</h6>
                          <!-- <%= link_to("Post New Message",admin_posts_path(@post), method: :post , class:"btn btn-outlined btn-primary", type:"submit") %> -->

                      </form>
                  </div>
              </div>
          </div>
    </div>
  </div>
